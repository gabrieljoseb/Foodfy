{% extends 'layout.njk' %}

{% block head %}

    <title>Foodfy - Receitas</title>

    <link rel="stylesheet" href="/styles/recipes.css">

{% endblock head %}

{% block content %}
    <div class="content">
        <section class="cards">

            {% for recipe in recipes %}
                <div class="card">
                    <div class="card__image-container">
                        <img src="{{recipe.image}}" alt="foto de {{recipe.title}}">
                    </div>
                    <div class="card__content">
                        <p class="food">{{recipe.title}}</p>
                    </div>
                    <div class="card__info">
                        <p>por
                            {{recipe.author}}</p>
                    </div>
                </div>
            {% endfor %}

            {% for recipe in recipes %}
                <div class="card">
                    <div class="card__image-container">
                        <img src="{{recipe.image}}" alt="foto de {{recipe.title}}">
                    </div>
                    <div class="card__content">
                        <p class="food">{{recipe.title}}</p>
                    </div>
                    <div class="card__info">
                        <p>por
                            {{recipe.author}}</p>
                    </div>
                </div>
            {% endfor %}

        </section>
    </div>

    <script src="/scripts/scripts.js"></script>
{% endblock content %}