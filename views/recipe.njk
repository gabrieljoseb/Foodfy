{% extends 'layout.njk' %}

{% block head %}
    <title>Foodfy - Receitas</title>

    <link rel="stylesheet" href="/styles/recipe.css">
{% endblock head %}

{% block content %}
    <div class="content">

        <div class="card">
            <div class="card__image-container">
                <img src="{{recipe.image}}" alt="foto de {{recipe.title}}">
            </div>
            <div class="card__content">
                <p class="food">{{recipe.title}}</p>
            </div>
            <div class="card__info">
                <p>por
                    {{recipe.author}}</p>
            </div>
        </div>

        <div class="recipe">
            <div class="ingredients">
                <div class="main">
                    <h3>Ingredientes
                        <a>esconder</a>
                    </h3>
                </div>

                <ul id="ingredients-text">
                    {% for ingredient in recipe.ingredients %}
                        <li>
                            <p>{{ ingredient }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="preparation">
                <div class="main">
                    <h3>Modo de preparo
                        <a>esconder</a>
                    </h3>
                </div>

                <ul id="preparation-text">
                    {% for prepare in recipe.preparation %}
                        <li>
                            <p>{{ prepare }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="information">
                <div class="main">
                    <h3>Informações adicionais
                        <a>esconder</a>
                    </h3>
                </div>

                <p id="information-text">{{ recipe.information }}</p>

            </div>
        </div>
    </div>

    <script src="/scripts/scripts.js"></script>

{% endblock content %}